<Window x:Class="Assignment_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment_GUI"
        mc:Ignorable="d"
        Title="StockItemGUI" Height="450" Width="800">
    <StackPanel VerticalAlignment="Center" Height="415">
        <Label Content="Inventory Management System" FontSize="20" Margin="10"/>
        <Button Content="Add item to stock" Margin="10" Click="AddItem_Click"/>
        <Button Content="Add quantity to item" Margin="10" Click="AddQuantity_Click"/>
        <Button Content="Take quantity from itemm" Margin="10" Click="TakeQuantityFromItemClick"/>
        <Button Content="View inventory report" Margin="10" Click="ViewInventoryReportClick"/>
        <Button Content="View financial report" Margin="10" Click="ViewFinacialReportClick"/>
        <Button Content="View transaction log" Margin="10" Click="ViewTransactionLogClick"/>
        <Button Content="View personal usage report" Margin="10" Click="ViewPersonalUsageReportClick"/>
        <Button Content="Exit" Margin="10" Click="Exit_Click"/>
    </StackPanel>
</Window>
