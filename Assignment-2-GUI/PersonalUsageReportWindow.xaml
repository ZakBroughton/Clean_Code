<Window x:Class="Assignment_2_GUI.PersonalUsageReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment_2_GUI"
        mc:Ignorable="d"
        Title="PersonalUsageReportWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Employee Name:"/>
            <TextBox x:Name="employeeNameTextBox" Width="200"/>
            <Button Content="Load Report" Click="LoadReportClick"/>
        </StackPanel>
        <DataGrid x:Name="reportDataGrid" AutoGenerateColumns="False" IsReadOnly="True">
        </DataGrid>
    </StackPanel>
</Window>
